			"tooltip": true,
			"tooltip-icon-size": 20 
		},
		{
			"type": "audio-out",
			"tooltip": true,
			"tooltip-icon-size": 20
		},
		{
			"type": "audio-in",
			"tooltip": true,
			"tooltip-icon-size": 20 
		}
	],
    },
    "gamemode": {
        "format-alt": "",
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}",
        "format-icons": [ "üåï", "üåñ", "üåó",  "üåò", "üåë"],
        "tooltip-format":"{percent}% {icon}",
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´",
        "format-ethernet": "Ôûñ",
        "format-linked": "Ôûñ",
        "format-disconnected": "‚ö†",
        "format-disabled": "Ôá´",
