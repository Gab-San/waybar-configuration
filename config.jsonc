            "deactivated": "ÔÅ∞",
        }
    },
    "niri/language": {
        "format": "{short} ({variant})",
    },

    // ----- CENTER MODULES -------
    "modules-center": [
        "custom/media",
        "niri/workspaces"
    ],
    "custom/media": {
        "format": "{text} {icon} ",
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéµ"
        },
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null",
    },
    "custom/spotify": {
        "format": "{text} {icon} ",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "interval": 30, // Remove this if your script is endless and write in loop
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources/custom_modules folder
        "exec-if": "pgrep spotify",
    },
    "niri/workspaces" : {
            // To configure
            "format": "{icon}",
            "format-icons":{
                "browser": "ÓÄá",
                "steam": "ÔÜ∂",
                "code": "Ôóº",
                "audio": "ÔÄ•",
                "chat": "ÔÅµ",
                "video": "ÔÄΩ", 
		"default": "ÔÑë"
            },
            "disable-click" : true,
        },
    // ------ RIGHT MODULES -------
    "modules-right": [
        "wireplumber",
        "cpu",
        "memory",
        "battery",
        "clock",
        "user",
        "custom/powermenu",
    ],
    "wireplumber": {
        "format": "{volume}% {icon} {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",  
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
        "max-volume": 100.0,
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true,
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "clock": {
        "format": "{:%a, %d/%m/%Y | %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>",
    },
    "user": {
        "format": "",
        "icon": true,
        "width": 40,
        "height": 40,
        "open-on-click": false,
    },
    "custom/powermenu": {
        "format": "ÔÄë",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "logout": "niri msg action quit -s",
            "shutdown": "shutdown now",
            "reboot": "reboot",
            "lock": "swaylock",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate",
        }
    },
}
