{
    "layer": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    "name": "gambar-top",
    "margin": "5 10 0 10",
    // ------- LEFT MODULES SECTION --------
    "modules-left": [
        "tray",
        "power-profiles-daemon",
        "niri/language",
        "bluetooth",
        "backlight",
        "network",
        "idle_inhibitor",
        "gamemode",
        "privacy",
    ],
    "tray": {
